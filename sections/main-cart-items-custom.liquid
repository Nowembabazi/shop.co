{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* custom styles */
.cart-container {
  display: flex;
  gap: 2rem;
  align-items: flex-start;
  justify-content: center;
  max-width: 1200px;
  margin: 0 auto;
}

.cart-form-products {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  align-self: flex-start;
}

/* Add separator under each product but not the last one */
.cart-items tr.cart-item {
  border-bottom: 1px solid #ddd;
}

.cart-items tr.cart-item:last-child {
  border-bottom: none;
}

/* Add some padding to improve the separator appearance */
.cart-items td {
  padding-bottom: 15px;
  padding-top: 15px;
}

.order-summary {
  flex: 0 0 380px;
  background: #fff;
  padding: 2rem;
  border-radius: 8px;
  border: 1px solid #ddd;
  position: sticky;
  top: 20px;
  height: auto;
  align-self: flex-start;
}

.order-summary h2 {
  margin: 0 0 1.5rem;
  font-size: 1.5rem;
  font-weight: bold;
  border-bottom: 1px solid #ddd;
  padding-bottom: 1rem;
}

.order-summary .summary-row {
  display: flex;
  justify-content: space-between;
  margin: 1rem 0;
  font-weight: bold;
}

.order-summary .summary-row span:last-child {
  font-weight: bold;
}

.order-summary .summary-total {
  font-weight: bold;
  font-size: 1.2rem;
  border-top: 1px solid #ddd;
  padding-top: 1rem;
}

/* Make discount price red */
.order-summary .summary-row:has(span:first-child:contains("Discount")) span:last-child {
  color: #e74c3c;
}

.order-summary .promo-code {
  margin: 1.5rem 0;
  display: flex;
  gap: 10px;
  align-items: center;
 
}

.order-summary .promo-code input {
  width: 80%;
  padding:  1.3rem;
  
  border-radius: 4px;
  background:#f1f1f1;
}

.order-summary .promo-code button {
  width: 20%;
  padding: 8px 16px;
  background: #000;
  border-radius: 10px;
  cursor: pointer;
  border: none; 
  color: white; 
}

.order-summary .checkout-button {
  width: 100%;
  padding: 1.5rem;
  background: #000;
  color: white;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-size: calc(var(--font-heading-scale)* 1.8rem);
  font-weight: bold;
  text-align: center;
  display: block;
  text-decoration:none;
}

.order-summary .checkout-button:hover {
  background: #333;
}

/* Increase thumbnail size */
.cart-item__media {
  width: 120px; /* Increased from default */
}

.cart-item__image-container {
  width: 120px; /* Increased from default */
  height: 120px; /* Increased from default */
  border-radius:10px !important;
}

/* Make image fill container */
.cart-item__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  
}

/* Restyle product details layout */
.cart-item__details {
  display: flex;
  flex-direction: column;
  padding-left: 1.5rem;
}

/* Move variant options up */
.cart-item__details dl {
  order: 1;
  margin-top: 5px;
  margin-bottom: 5px;
}

/* Move price below variant options */
.cart-item__details .product-option:has(.cart-item__final-price),
.cart-item__details .product-option:has(.cart-item__old-price),
.cart-item__details .cart-item__discounted-prices {
  order: 2;
  margin-top: 5px;
}

/* Style variant options */
.cart-item__details .product-option {
  font-size: 0.9rem;
  margin-bottom: 3px;
  display: flex;
}

.cart-item__details .product-option dt,
.cart-item__details .product-option dd {
  margin: 0;
}

.cart-item__details .product-option dt {
  margin-right: 5px;
  font-weight: bold;
}

/* Update cart quantity styling */
.cart-quantity {
  background-color: #f1f1f1;
  border-radius: 4px;
}

.cart-quantity .quantity__button {
  border-radius: 4px;
}

.cart-quantity .quantity__input {
  background-color: #f1f1f1;
}

/* Reposition remove button and make it red */
cart-remove-button {
  position: absolute;
  top: 0;
  right: 0;
}

cart-remove-button .button--tertiary {
  color: #e74c3c;
}

cart-remove-button .button--tertiary svg path {
  fill: #e74c3c;
}

/* Position cart item quantity wrapper */
.cart-item__quantity-wrapper {
  position: relative;
  padding-top: 25px; /* Make space for delete button above */
}

/* Make headings and prices bold */
.cart-items th, 
.price, 
.cart-item__name,
.cart-item__final-price,
.cart-item__old-price {
  font-weight: bold !important;
}

/* Mobile responsiveness */
@media (max-width: 749px) {
  .cart-container {
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  
  .cart-form-products {
    width: 100%;
  }
  
  .order-summary {
    width: 100%;
    position: static;
    margin-top: 2rem;
  }
  
  .cart-item__media {
    width: 100px;
  }
  
  .cart-item__image-container {
    width: 100px;
    height: 100px;
  }
}
{%- endstyle -%}

